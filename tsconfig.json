{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "declaration": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "pretty": true,
    "lib": [
      "es2017",
      "es6",
      "dom",
      "scripthost",
      "esnext"
    ],
    "outDir": "./build/package"
  },
  "include": [
    "lib/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
